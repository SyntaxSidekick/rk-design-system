{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/lib/**/*", "src/index.ts", "src/components.ts", "src/hooks.ts", "src/utils.ts"],
  "exclude": ["src/main.tsx", "src/app/**/*", "**/*.test.ts", "**/*.test.tsx"]
}
