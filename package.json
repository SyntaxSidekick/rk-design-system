{
  "name": "@syntaxsidekick/riadkilani-design-system",
  "version": "2.0.0",
  "description": "Riad Kilani Design System v2 (Tailwind/PostCSS removed)",
  "type": "module",
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/riadkilani-design-system.css",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/riadkilani-design-system.css",
    "./tabs": {
      "import": "./dist/components/tabs.mjs",
      "require": "./dist/components/tabs.cjs"
    },
    "./accordion": {
      "import": "./dist/components/accordion.mjs",
      "require": "./dist/components/accordion.cjs"
    },
    "./dropdown": {
      "import": "./dist/components/dropdown.mjs",
      "require": "./dist/components/dropdown.cjs"
    },
    "./tooltip": {
      "import": "./dist/components/tooltip.mjs",
      "require": "./dist/components/tooltip.cjs"
    },
    "./modal": {
      "import": "./dist/components/modal.mjs",
      "require": "./dist/components/modal.cjs"
    },
    "./toast": {
      "import": "./dist/components/toast.mjs",
      "require": "./dist/components/toast.cjs"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "postbuild": "node scripts/copy-types.cjs",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "4.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "6.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SyntaxSidekick/rk-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/SyntaxSidekick/rk-design-system/issues"
  },
  "homepage": "https://syntaxsidekick.github.io/rk-design-system",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ],
  "pnpm": {
    "overrides": {
      "vite": "6.3.5"
    }
  }
}
